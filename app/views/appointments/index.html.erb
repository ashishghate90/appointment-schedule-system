<h1>Appointments</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Doctor</th>
      <th scope="col">Schedule at</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @appointments.each_with_index do |appointment, i| %>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= appointment.title %></td>
        <td><%= appointment.description %></td>
        <td><%= full_name(appointment.doctor) %></td>
        <td><%= appointment.schedule_at %></td>
        <td><%= appointment.status ? "Accepted" : "Not Accepted"%></td>
        <td><%= link_to 'Show', appointment, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment), class: "btn btn-warning" %></td>
        <td><%= link_to 'Cancle', appointment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
     <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Appointment', new_appointment_path, class: "btn btn-primary" %>
